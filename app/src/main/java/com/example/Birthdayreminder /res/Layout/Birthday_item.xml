<!-- res/layout/birthday_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="8dp">

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical">

        <TextView android:id="@+id/nameText" android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/dateText"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>

    <Button android:id="@+id/sendWishButton" android:text="Wish"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>
